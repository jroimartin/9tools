# More info: /usr/local/plan9/plumb
editor = acme

# Google
type	is	text
data	matches	'google:([a-zA-Z0-9+]+)'
plumb	to	web
plumb	start	web https://www.google.com/search?q=$1

# git
type	is	text
data	matches	'commit ([a-zA-Z0-9]+)'
plumb	start	rc -c 'cd '$wdir' && git show '$1' | plumb -i -d edit -a ''action=showdata filename=/git/'$1''''

# github
type	is	text
data	matches	'(issue|pr) #([0-9]+)'
plumb	start rc -c 'cd '$wdir' && ghweb '$2

#Â include basic plumbing rules
include basic
